<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainGeneralStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/offset_16</item>
    </style>

    <style name="ActivitySettingsGeneralStyle" parent="ActivityMainGeneralStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActivitySettingsColorAndFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/typesettingFontSize</item>
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActivityMainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/titleFontSize</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Theme.MaterialComponents.DayNight.NoActionBar.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="CompositionNameStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/typesettingFontSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="android:textSize">@dimen/miniFontSize</item>
        <item name="android:textColor">@color/grey</item>

    </style>

    <style name="DurationStyle">
        <item name="android:textSize">@dimen/miniFontSize</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ellipse_color">
        <item name="android:fillColor">#FFFF0000</item>
    </style>
</resources>